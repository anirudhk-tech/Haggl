# =============================================================================
# Haggl - EditorConfig
# https://editorconfig.org
# =============================================================================

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Docker
[Dockerfile*]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Config files
[*.{toml,cfg,ini}]
indent_size = 4
